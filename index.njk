---
layout: default
---

<div
  class="text-center"
  x-data="{ tab: window.location.hash ? window.location.hash.substring(1) : 'line' }"
  id="tab_wrapper"
>
  <!-- The tabs navigation -->
  <nav
    class="sticky top-0 z-10 py-3 bg-white dark:bg-primary-900 mb-2 text-sm shadow-lg"
  >
    <div class="container mx-auto px-4 flex items-center justify-between">
      <span class="flex flex-1"
        ><a
          class="cursor-pointer flex-1 md:flex-initial transition-all inline-flex justify-center items-center py-2 px-16 rounded bg-primary-100 hover:bg-primary-300 mr-4"
          :class="{ 'bg-primary-900 text-primary-100 dark:bg-primary-200 dark:text-primary-900 pointer-events-none': tab === 'line' }"
          @click.prevent="tab = 'line'; window.location.hash = 'line'"
          >{{ "/icons/line/badge-check.svg" | svgContents("mr-2") | safe }}
          Line</a
        >
        <a
          class="cursor-pointer flex-1 md:flex-initial transition-all inline-flex justify-center items-center py-2 px-16 rounded bg-primary-100 hover:bg-primary-300"
          :class="{ 'bg-primary-900 text-primary-100 dark:bg-primary-200 dark:text-primary-900 pointer-events-none': tab === 'solid' }"
          @click.prevent="tab = 'solid'; window.location.hash = 'solid'"
          >{{ "/icons/solid/badge-check.svg" | svgContents("mr-2") | safe }}
          Solid</a
        ></span
      >
      <span class="opacity-50 hidden md:block"
        >More styles are coming soon ðŸŽ‰</span
      >
    </div>
  </nav>

  <!-- The tabs content -->
  <div class="container mx-auto px-4">
    <div x-show="tab === 'line'">{% include "line-icons.njk" %}</div>
    <div x-show="tab === 'solid'">{% include "solid-icons.njk" %}</div>
  </div>
</div>
